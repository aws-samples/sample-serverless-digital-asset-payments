{
  "name": "crypto-invoice-cdk",
  "version": "1.0.0",
  "private": true,
  "description": "AWS CDK Stack for Digital Asset Invoices",
  "dependencies": {
    "@aws-crypto/client-node": "^4.2.1",
    "@aws-sdk/client-kms": "^3.797.0",
    "@aws-sdk/client-secrets-manager": "^3.797.0",
    "aws-cdk-lib": "^2.192.0",
    "aws-sdk": "^2.1692.0",
    "bip39": "^3.1.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eth-cli": "^2.0.2",
    "ethers": "^6.14.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cdk-nag": "^2.28.0",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "npx tsc",
    "deploy": "cdk deploy",
    "synth": "cdk synth",
    "setup-secrets": "./scripts/setup-secrets.sh",
    "setup": "./test/integration/setup.sh",
    "execute-payment": "./test/integration/execute_payment.sh",
    "cleanup": "./test/integration/cleanup.sh",
    "test-pipeline": "./test/integration/run_test_pipeline.sh",
    "derive-address": "node scripts/derive-address.js",
    "wallet-info": "node scripts/wallet-info.js",
    "test-invoice-management": "./test/integration/test-invoice-management-api.sh",
    "nag": "cdk synth --quiet && echo 'CDK Nag evaluation completed'",
    "test": "npm run build && jest",
    "test:cdk": "./scripts/test-cdk.sh",
    "test:lambda": "jest test/unit --ignore-pattern=test/unit/cdk",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "security": "eslint . --ext .js,.ts --config .eslintrc.security.js",
    "lint-check": "./scripts/lint-check.sh"
  }
}
