# Solana RPC endpoint (mainnet-beta, devnet, or testnet)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Treasury wallet public key where funds will be swept
SOLANA_TREASURY_PUBLIC_KEY=your_solana_public_key_here

# Hot wallet private key (base58 encoded) for gas top-ups
SOLANA_HOT_WALLET_PRIVATE_KEY=your_base58_private_key_here

# (OPTIONAL) Test payer private key for integration tests
SOLANA_PAYER_PRIVATE_KEY=your_test_payer_private_key_here
